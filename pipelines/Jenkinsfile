pipeline {
    agent any
    parameters {
        choice(choices: ['Deploy', 'Destroy'], description: 'choose deploy to install the chart, or Destroy to uninstall the chart', name: 'Action')
    }
    stages {
        stage('Clone Repository') {
            steps {
                git url: "https://github.com/ogora100/simple-web-service-etoro.git", branch: "main"
            }
        }
        stage('Connect to Azure subscription') {
            steps {
                script {
                    sh """
		    // /var/lib/jenkins/.kube/config is in place already, just connect to Azure subscription
                    az login -i
                    """
                }
            }
        }
        stage('Deploy or Destroy Helm Chart') {
            steps {
                script {
                    // Set the release name and namespace
                    def releaseName = 'my-release'
                    def namespace = 'default'

                    // Check if the user specified the 'DEPLOY' parameter
                    if (params.Action == "Deploy") {
                        // Deploy the Helm chart
                        sh """
			helm install simple-web-chart  simple-web-chart --namespace omer
			"""
                    } else {
                        // Destroy the Helm chart
                        sh "helm uninstall simple-web-chart  simple-web-chart --namespace omer"
                    }
                }
            }
        }
    }
}

